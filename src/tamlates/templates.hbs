<div class="block">
  <img src="{{flag}}" alt="Flag" class="flag" />
  <div class="block">
    <ul>
      <li>
        <h2>{{name}}</h2>
        <p>Capital: {{capital}}</p>
        <p>Population: {{population}}</p>
        <div>
          <h3>Languages:</h3>
          <ul>
            {{#each languages}}
            <li>{{this.name}}</li>
            {{/each}}
          </ul>
        </div>
      </li>
    </ul>
  </div>
</div>